---
const { frontmatter, url } = Astro.props;
---
<html>
    <head>
        <meta name="viewport" content="initial-scale=1, width=device-width">
        <title>{frontmatter.title}</title>
        <link rel="stylesheet" href="https://latex.now.sh/style.css">
        <link rel="stylesheet" href="/styles.css">
        <link href="/favicon.ico" rel="icon">
    </head>
    <body class="libertinus">
        <header>
            <h1 id="home">{frontmatter.title}</h1>
            <p class="author">
                <a href="/cortex/">Cortex</a><br>
                <a href="https://github.com/avolent">github.com/{frontmatter.author}</a><br>
                Updated on: {frontmatter.date} <br>
                {url}
            </p>
        </header>
        <slot />
        <div class="footnotes">
            <p id="fn1">
            CSS is from <a href="https://latex.vercel.app/">Latex.css</a>
            </p>
            <p id="fn2" style="text-align: right">
            Return to top <a href="#home">â†©</a>
            </p>
        </div>
    </body>

</html>