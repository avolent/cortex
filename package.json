{
  "name": "cortex-wiki",
  "type": "module",
  "version": "1.0.0",
  "description": "Personal wiki built with Astro and synced from Obsidian",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint . --ext .js,.ts,.astro",
    "lint:fix": "eslint . --ext .js,.ts,.astro --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "astro check",
    "sync": "python3 bin/obsidian_sync.py",
    "commit": "git-cz",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.11",
    "@astrojs/sitemap": "^3.6.0",
    "astro": "^5.15.9"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.5",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "eslint-plugin-astro": "^1.5.0",
    "git-cz": "^4.9.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "typescript": "^5.9.3"
  }
}
